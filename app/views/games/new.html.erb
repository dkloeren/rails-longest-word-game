<h1>New Game</h1>
<div class="d-flex justify-content-left">
  <% @grid.each do |letter|%>
    <div class="letter d-flex justify-content-center align-items-center">
      <p><%= letter %> </p>
    </div>
  <% end %>
</div>

<p class="form">What is the longest word you can find?</p>
<form action=score method='POST' class="form">
  <input id="grid" name="grid" type="hidden" value="<%= @grid.join %>"/>
  <input type="text" name="word" placeholder="Word" value="<%= params[:word] %>" class="form">
  <input type="submit" value="Submit">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
